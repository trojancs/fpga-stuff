module decoder (
    input num [4],
    output seg [8]
  ) {

  always {
    case (num) {
      /*
      0000: seg = 00100001; //active low
      0001: seg = 10101111;       
      0010: seg = 00110010;
      0011: seg = 00100110;
      0100: seg = 10101100;
      0101: seg = 01100100;
      0110: seg = 01100000;
      0111: seg = 00101111;
      1000: seg = 00100000;
      1001: seg = 00100100;
      1010: seg = 00101000;
      1011: seg = 11100000;
      1100: seg = 01110001;
      1101: seg = 10100010;
      1110: seg = 01110000; 
      1111: seg = 01111000;
      */
      
      0000: seg = 00000000; //active low
      0001: seg = 11111111;  
      default: seg = 01010101;     
    }
  }
}
